<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
</head>
<body>
	<!-- modal框 -->
	<div class="container">
		<div id="changeGroupNameModal" class="modal fade" data-backdrop="static" data-keyboard="false"
			style="display: none;" tabindex="-1">
			<div class="modal-dialog modal-sm">
				<div class="modal-content">
					<div class="modal-header">						 
						<button type="button" class="close" data-dismiss="modal"
							aria-hidden="true">&times;</button>
						<h4 class="modal-title"></h4>
						<label class="hide"></label>			 
					</div>
					<div class="modal-body">
						<div class="text-center">
							<input id="inGroupNewName" class="form-control name-input" type="text" placeholder="新群组名" />
						</div>
						<div class="hidden text-center input-valid" style="font-size:15px;font-weight:600;color: #cbc" id="nameErrMsg"></div>
					</div>
					<div class="modal-footer">
						<button id="sure_btn" type="button" class="btn btn-danger" style="margin: auto 0">确定</button>
						<button type="button" class="btn btn-primary" data-dismiss="modal" aria-hidden="true">取消</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
</html>